    IFS=',' read -ra PORT_ARRAY <<< "$ports"
    for port in "${PORT_ARRAY[@]}"; do
        port=$(echo "$port" | tr -d ' ')
        local unique_name="sudp-${port}-${ip_suffix}"
        cat >> "$config_file" << EOF
[[proxies]]
name = "$unique_name"
type = "sudp"
secretKey = "moonfrp_secret_${port}_${ip_suffix}"
